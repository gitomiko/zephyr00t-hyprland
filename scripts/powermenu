#!/usr/bin/env bash

# Waybar-safe environment
export PATH="$HOME/.local/bin:/usr/local/bin:/usr/bin:/bin"

choice=$(printf "â» Shutdown\nðŸ”„ Reboot\nðŸŒ™ Suspend\nðŸ”’ Lock\nðŸšª Logout" | \
  wofi --dmenu \
       --prompt "Power" \
       --width 200 \
       --lines 5)

case "$choice" in
  "â» Shutdown")
    systemctl poweroff
    ;;
  "ðŸ”„ Reboot")
    systemctl reboot
    ;;
  "ðŸŒ™ Suspend")
    systemctl suspend
    ;;
  "ðŸ”’ Lock")
    hyprlock 2>/dev/null || swaylock
    ;;
  "ðŸšª Logout")
    hyprctl dispatch exit
    ;;
  *)
    exit 0
    ;;
esac

